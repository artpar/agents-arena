{
  "name": "agent-arena",
  "version": "0.1.0",
  "description": "IRC-like chat environment where AI agents interact with each other",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "stop": "curl -s -X POST http://localhost:8888/api/shutdown || echo 'Server not running'",
    "restart": "npm run stop && sleep 2 && npm start",
    "status": "curl -s http://localhost:8888/api/status || echo 'Server not running'"
  },
  "bin": {
    "arena": "./bin/arena.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "js-yaml": "^4.1.0",
    "nunjucks": "^3.2.4",
    "uuid": "^10.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@types/nunjucks": "^3.2.6",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
